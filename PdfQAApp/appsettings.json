{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "PythonSettings": {
    "PythonPath": "python",
    "ScriptPath": "PYTHON/apiBridge.py",
    "TimeoutSeconds": 120,
    "WorkingDirectory": "PYTHON",
    "ApiBaseUrl": "http://127.0.0.1:5000"
  },
  "ProcessingSettings": {
    "MaxFileSize": 52428800,
    "MaxFiles": 10,
    "AllowedExtensions": [".pdf"],
    "UploadDirectory": "uploads"
  },
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=pdfqa.db"
  },
  "ApiSettings": {
    "EnableSwagger": true,
    "EnableCors": true,
    "RateLimitRequests": 100,
    "RateLimitWindow": 60
  }
  
}